@page
@model razorPage_pageModel_vinculado.Pages.CreateCityModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2 class="mb-4">Cadastro de Cidades Turísticas</h2>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Input.CityName" class="form-label">Nome da Cidade:</label>
                    <input asp-for="Input.CityName" class="form-control" placeholder="Ex: Rio de Janeiro" />
                    <span asp-validation-for="Input.CityName" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Cadastrar Cidade</button>
            </form>

            @if (!string.IsNullOrEmpty(Model.CityNameResult))
            {
                <div class="alert alert-success mt-4">
                    <strong>Sucesso!</strong> @Model.CityNameResult foi cadastrada.
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}